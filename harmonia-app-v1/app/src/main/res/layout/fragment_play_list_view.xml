<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:background="#000"
    tools:context="com.sanilk.harmonia.PlaylistViewFragment">

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:padding="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@color/lemonade_cherry_red"
            android:padding="4dp"
            android:src="@drawable/temp1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:background="@color/lemonade_cherry_red"
                    android:padding="4dp"
                    android:src="@drawable/temp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:background="@color/lemonade_cherry_red"
                    android:padding="4dp"
                    android:src="@drawable/temp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:background="@color/lemonade_cherry_red"
                    android:padding="4dp"
                    android:src="@drawable/temp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:textColor="@color/lemonade_cherry_red"
                android:text="Play"
                android:background="@drawable/btn_play_btn1"
                android:layout_width="150dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
