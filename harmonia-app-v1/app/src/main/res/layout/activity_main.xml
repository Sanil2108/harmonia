<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <!--<ImageView-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/temp_background"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sanilk.harmonia.MainActivity">

        <EditText
            android:id="@+id/activity_main_username"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/lemonade_cherry_red"
            android:background="@drawable/btn_play_btn1"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <EditText
            android:id="@+id/activity_main_password"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/lemonade_cherry_red"
            android:background="@drawable/btn_play_btn1"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/activity_main_sign_in_btn"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="Sign in"
            android:textColor="@color/lemonade_cherry_red"
            android:background="@drawable/btn_play_btn1"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/activity_main_sign_up_button"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:text="Sign up"
                android:textSize="14sp"
                android:background="@drawable/my_sign_up"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_main_or"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:fontFamily="sans-serif"
                    android:text="- or  -"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/facebook_login_button"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:background="@drawable/facebook_login"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/fb_logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/activity_main_facebook_button_text"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="Sign in with Facebook"
                    android:layout_height="match_parent" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/google_login_button"
                android:layout_height="45dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:background="@drawable/google_login"
                android:layout_width="match_parent">

                <ImageView
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/googleg_standard_color_18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:textColor="@color/googleLoginText"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="Sign in with Google"
                    android:id="@+id/activity_main_google_button_text"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <!--<com.google.android.gms.common.SignInButton-->
            <!--android:id="@+id/google_sign_in_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_height="wrap_content" />-->

        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:visibility="invisible"-->
            <!--android:id="@+id/facebook_login_button"-->
