<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="420dp"
    android:background="#000"
    tools:context="com.sanilk.harmonia.NotificationsFragment">

    <TextView
        android:layout_margin="10dp"
        android:textColor="@color/lemonade_cherry_red"
        android:text="Notifications"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#4d4d4d"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Your playlist 'My playlist' got more than 500 upVotes!"
                android:textColor="@color/lemonade_cherry_red"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:background="#4d4d4d"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Your playlist 'My playlist' got more than 500 upVotes!"
                android:textColor="@color/lemonade_cherry_red"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:background="#4d4d4d"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Your playlist 'My playlist' got more than 500 upVotes!"
                android:textColor="@color/lemonade_cherry_red"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:background="#4d4d4d"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Your playlist 'My playlist' got more than 500 upVotes!"
                android:textColor="@color/lemonade_cherry_red"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/lemonade_cherry_red"
                android:text="see more +"
                android:background="@drawable/btn_play_btn1"
                android:layout_width="100dp"
                android:layout_height="35dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
