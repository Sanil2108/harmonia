<LinearLayout android:layout_width="350dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@drawable/calm_heading"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:fontFamily="@font/source_code2"
            android:textAlignment="center"
            android:text="S E A R C H"
            android:textSize="20sp"
            android:textColor="@color/calm_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/calm_background"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:hint="Search here"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/calm_text"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/new_song_layout_search"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/calm_text"
                android:shadowColor="@color/calm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <ListView
            android:id="@+id/new_song_layout_search_result_list"
            android:layout_width="match_parent"
            android:layout_height="200dp">


        </ListView>

        <LinearLayout
            android:id="@+id/new_song_layout_selected_songs"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </LinearLayout>


        <Button
            android:layout_marginTop="0dp"
            android:textSize="16sp"
            android:text="Done!"
            android:id="@+id/new_song_layout_done"
            android:textColor="@color/calm_back"
            android:shadowColor="@color/calm_back"
            android:background="@drawable/calm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="16sp"
            android:text="Cancel"
            android:id="@+id/new_song_layout_cancel"
            android:textColor="@color/calm_back"
            android:shadowColor="@color/calm_back"
            android:background="@drawable/calm_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>