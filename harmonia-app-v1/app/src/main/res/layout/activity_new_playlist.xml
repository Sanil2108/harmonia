<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calm_text"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@drawable/calm_heading"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:fontFamily="@font/source_code2"
            android:textAlignment="center"
            android:text="C R E A T E"
            android:textSize="20sp"
            android:textColor="@color/calm_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:background="@drawable/calm_background"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:layout_height="0dp">

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/calm_text"
            android:layout_width="match_parent">

            <EditText
                android:textColor="@color/calm_text"
                android:shadowColor="@color/calm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:hint="Tags"
            android:textColorHint="@color/calm_text"
            android:layout_width="match_parent">

            <EditText
                android:textColor="@color/calm_text"
                android:layout_marginTop="20dp"
                android:shadowColor="@color/calm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/calm_text"
            android:text="Videos"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/activity_new_playlist_video_container"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/activity_new_playlist_add"
                    android:scaleType="centerCrop"
                    android:src="@drawable/calm_add_btn"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:text="Looks Great!"
            android:textColor="@color/calm_back"
            android:shadowColor="@color/calm_back"
            android:background="@drawable/calm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="16sp"
            android:text="I'll do it some other time"
            android:textColor="@color/calm_back"
            android:shadowColor="@color/calm_back"
            android:background="@drawable/calm_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
